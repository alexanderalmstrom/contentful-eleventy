---
layout: layouts/base.njk
pagination:
  data: posts.items
  size: 1
  alias: post
permalink: "post/{{ post.fields.name | slug }}/"
---

<h1>{{ post.fields.name }}</h1>
{% if post.fields.content %}
  {% md post.fields.content %}
{% endif %}

{% for block in post.fields.blocks %}
  <div class="post">
    <pre><code>{{ block | dump }}</code></pre>
  </div>
{% endfor %}
